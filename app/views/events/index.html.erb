<div>
  <h5>Events</h5>
  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% events.each do |event| %>
        <tr>
          <td><%= event.description %></td>
          <td><%= event.date %></td>
          <td><%= link_to 'Show', event %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br/>
  <h6>Upcoming Events</h6>
  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% upcoming_events.each do |event| %>
        <tr>
          <td><%= event.description %></td>
          <td><%= event.date %></td>
          <td><%= link_to 'Show', event %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br/>
  <h6>Past Events</h6>
  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% previous_events.each do |event| %>
        <tr>
          <td><%= event.description %></td>
          <td><%= event.date %></td>
          <td><%= link_to 'Show', event %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
