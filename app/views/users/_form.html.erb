<%= form_with(model: user, local: true) do |form| %>
  <%= render 'errors' %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, :id => :username, class: 'mb-1 form-control' %>
  </div>
  <br/>
  <br/>
  <button class="actions btn">
    <input type="submit" name="commit" value="Register">
  </button>
<% end %>
